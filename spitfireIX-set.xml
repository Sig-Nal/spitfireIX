 <!-- Map Keys -->
 <input>
    <keyboard>
      <key n="113"> 
        <name>q</name>
        <desc>Toggle Master Arm on</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="81"> 
        <name>Q</name>
        <desc>Toggle Master Arm off</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">-1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>  
      <key n="101">
        <name>e</name>
        <desc>Fire MGs</desc>
        <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger</property>
          </binding>
        </mod-up>
      </key>

      <key n="69">
        <name>E</name>
        <desc>fire Cannons</desc>
        <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger1</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger1</property>
          </binding>
        </mod-up>
      </key>
      <key n="5">
        <name>Ctrl-e</name>
        <desc>drop Center Load</desc>
        <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger2</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>controls/armament/trigger2</property>
          </binding>
        </mod-up>
      </key>
      <key n="100">
        <name>d</name>
        <desc>Toggle Canopy</desc>
         <binding>
          <command>nasal</command>
          <script>spit9.canopy.toggle()</script>
         </binding>
      </key>
      <key n="68">
        <name>D</name>
        <desc>Toggle Door</desc>
         <binding>
          <command>nasal</command>
          <script>spit9.door.toggle()</script>
         </binding>
      </key>
     </keyboard>
 </input>

