	<animation>
		<type>rotate</type>
		<object-name>card</object-name>
		<property alias="../../params/indicated-heading-deg"/>
		<factor>1.0</factor>
		<center>
			<x-m>  0.00 </x-m>
			<y-m>  0.00 </y-m>
			<z-m>  0.00 </z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>bezel</object-name>
		<object-name>heading_bug</object-name>
		<object-name>heading_bug_knob</object-name>
		<property alias="../../params/heading-bug-deg"/>
		<factor>1.0</factor>
		<center>
			<x-m>  0.00 </x-m>
			<y-m>  0.00 </y-m>
			<z-m>  0.00 </z-m>
		</center>
		<axis>
			<x>0.0</x>
			<y>0.0</y>
			<z>1.0</z>
		</axis>
	</animation>

	<animation>
		<type>material</type>
		<object-name>bracket-support</object-name>
		<condition>
			<or>
			<equals>
				<property>sim/aircraft</property>
				<value>seafireIIIc</value>
			</equals>	
				<equals>
				<property>sim/aircraft</property>
				<value>spitfireVb</value>
			</equals>
			</or>
		</condition>
		<texture>seafire-tx-00.png</texture>
	</animation>

	<animation>
		<type>material</type>
		<condition>
			<greater-than>
				<property>/controls/lighting/panel-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
		<emission>
			<factor-prop>/controls/lighting/panel-norm</factor-prop>
			<red>0.75</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
	</animation>

</PropertyList>
